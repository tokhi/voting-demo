# main.tf
terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
    helm = {
      source  = "hashicorp/helm"
      version = "~> 2.0"
    }
    kubernetes = {
      source  = "hashicorp/kubernetes"
      version = "~> 2.0"
    }
  }
}

provider "aws" {
  region = var.aws_region
}

# VPC Module
module "vpc" {
  source  = "terraform-aws-modules/vpc/aws"
  version = "~> 5.0"

  name = "${var.environment_name}-vpc"
  cidr = var.vpc_cidr

  azs             = var.availability_zones
  private_subnets = var.private_subnet_cidrs
  public_subnets = var.public_subnet_cidrs

  enable_nat_gateway = true
  enable_vpn_gateway = false

  tags = {
    Name = "${var.environment_name}-vpc"
  }
}

# EKS Cluster
module "eks" {
  source  = "terraform-aws-modules/eks/aws"
  version = "~> 20.0"

  cluster_name    = "${var.environment_name}-cluster"
  cluster_version = var.cluster_version

  vpc_id     = module.vpc.vpc_id
  subnet_ids = module.vpc.private_subnets

  eks_managed_node_groups = {
    general = {
      name           = "general"
      instance_types = ["t3.medium"]
      min_size      = 2
      max_size      = 4
      desired_size = 2

      capacity_type = "ON_DEMAND"
    }
  }

  # Enable IAM roles for service accounts
  enable_irsa = true

  tags = {
    Environment = var.environment_name
  }
}

# Kubernetes provider configuration
provider "kubernetes" {
  host                   = module.eks.cluster_endpoint
  cluster_ca_certificate = base64decode(module.eks.cluster_certificate_authority_data)

  exec {
    api_version = "client.authentication.k8s.io/v1beta1"
    args        = ["eks", "get-token", "--cluster-name", module.eks.cluster_name]
    command   = "aws"
  }
}

provider "helm" {
  kubernetes {
    host                   = module.eks.cluster_endpoint
    cluster_ca_certificate = base64decode(module.eks.cluster_certificate_authority_data)

    exec {
      api_version = "client.authentication.k8s.io/v1beta1"
      args        = ["eks", "get-token", "--cluster-name", module.eks.cluster_name]
      command   = "aws"
    }
  }
}

# Create namespace for the application
resource "kubernetes_namespace" "voting_app" {
  metadata {
    name = var.namespace
  }

  depends_on = [module.eks.cluster_primary_security_group_id]
}

# Deploy the voting application using Helm
resource "helm_release" "voting_app" {
  name       = "voting-app"
  repository = "../helm"
  chart     = "../helm"
  namespace = kubernetes_namespace.voting_app.metadata[0].name

  set {
    name  = "vote.image.tag"
    value = "latest"
  }

  set {
    name  = "result.image.tag"
    value = "latest"
  }

  set {
    name  = "worker.image.tag"
    value = "latest"
  }

  depends_on = [
    module.eks.cluster_primary_security_group_id,
    kubernetes_namespace.voting_app
  ]
}
